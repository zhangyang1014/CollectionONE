<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cco.mapper.TenantAdminMapper">
    
    <!-- 根据登录ID查询管理员 -->
    <select id="selectByLoginId" resultType="com.cco.model.entity.TenantAdmin">
        SELECT * FROM tenant_admins
        WHERE login_id = #{loginId}
        LIMIT 1
    </select>
    
    <!-- 检查登录ID是否已存在 -->
    <select id="existsByLoginId" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM tenant_admins
        WHERE login_id = #{loginId}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>
    
</mapper>

