<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cco.mapper.TeamAdminAccountMapper">
    
    <!-- 根据登录ID查询管理员 -->
    <select id="selectByLoginId" resultType="com.cco.model.entity.TeamAdminAccount">
        SELECT * FROM team_admin_accounts
        WHERE login_id = #{loginId}
        LIMIT 1
    </select>
    
    <!-- 检查登录ID是否已存在 -->
    <select id="existsByLoginId" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM team_admin_accounts
        WHERE login_id = #{loginId}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>
    
    <!-- 根据条件查询管理员列表 -->
    <select id="selectByConditions" resultType="com.cco.model.entity.TeamAdminAccount">
        SELECT * FROM team_admin_accounts
        <where>
            <if test="tenantId != null">
                AND tenant_id = #{tenantId}
            </if>
            <if test="agencyId != null">
                AND agency_id = #{agencyId}
            </if>
            <if test="teamId != null">
                AND team_id = #{teamId}
            </if>
            <if test="isActive != null">
                AND is_active = #{isActive}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>
    
</mapper>

